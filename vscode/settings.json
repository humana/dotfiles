// Place your settings in this file to overwrite the default settings
{
"editor.fontFamily": "'SF Mono', Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
"terminal.integrated.fontFamily": "'SFMono Nerd Font'",
  "terminal.integrated.fontSize": 14,
    // The proxy setting to use. If not set will be taken from the http_proxy and https_proxy environment variables
//    "http.proxy": "http://localhost:3128",
    // Whether the proxy server certificate should be verified against the list of supplied CAs.
 //   "http.proxyStrictSSL": false,
    // The value to send as the 'Proxy-Authorization' header for every network request.
  //  "http.proxyAuthorization": null,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],
    "editor.wordWrap": "on",
    "git.autofetch": true,
    "files.associations": {
        "*.vue": "vue",
        "*.ipynb": "python"
    },
    "python.jupyter.defaultKernel": "",
    "python.jupyter.startupCode": [
        "%matplotlib inline"
    ],
    "python.jupyter.appendResults": true,
    // "latex-workshop.latex.toolchain": [
    //     {
    //       "command": "pdflatex",
    //       "args": [
    //         "-synctex=1",
    //         "-interaction=nonstopmode",
    //         "-file-line-error",
    //         "%DOC%"
    //       ]
    //     }, {
    //       "command": "bibtex",
    //       "args": [
    //         "%DOCFILE%"
    //       ]
    //     }, {
    //       "command": "pdflatex",
    //       "args": [
    //         "-synctex=1",
    //         "-interaction=nonstopmode",
    //         "-file-line-error",
    //         "%DOC%"
    //       ]
    //     }, {
    //       "command": "pdflatex",
    //       "args": [
    //         "-synctex=1",
    //         "-interaction=nonstopmode",
    //         "-file-line-error",
    //         "%DOC%"
    //       ]
    //     }
    //   ],
    "editor.minimap.enabled": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.disableAnnoyingNeovimMessage": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue",
        {
            "language": "html",
            "autoFix": true
        }
    ],
    "cSpell.ignoreRegExpList": [
        "\\\\\\w*(\\[.*?\\])?(\\{.*?\\})?",
        "\\$.+?\\$",
        "\\w*%.+"
    ],
    "cSpell.userWords": [
        "Bayes",
        "LSTM",
        "analytics",
        "aniello",
        "anonymized",
        "backpropagation",
        "bigram",
        "bigrams",
        "blogs",
        "convolutional",
        "denoising",
        "emoticons",
        "gmail",
        "hashtags",
        "hyperparameters",
        "movie",
        "scalability",
        "subsampling",
        "unigram",
        "unigrams",
        "visualisation"
    ],
    "extensions.ignoreRecommendations": false,
    "cSpell.language": "en-GB",
    "workbench.colorTheme": "Oceanic Next (dimmed bg)",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.update.show": false,
    "jupyter.appendResults": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "terminal.integrated.shell.osx": "bash",
    "git.confirmSync": false,
    "terminal.integrated.shell.linux": "/usr/local/bin/zsh",
    "python.dataScience.sendSelectionToInteractiveWindow": true,
}
